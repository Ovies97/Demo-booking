                <ul class="collapse list-unstyled" id="pageSubmenu">
                    <li>
                        @Html.ActionLink("View Bookings", "ViewBooking", "Employee")
                    </li>
                    <li>
                        @Html.ActionLink("View My Details", "ViewInstr", "Employee")
                    </li>
                    

                </ul>
            </li>
           
            <li>
                <a href="#">Contact</a>
            </li>
        </ul>

